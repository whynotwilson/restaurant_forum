<div class="row">
  {{#if edit}}
  <form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" name="name" id="name" placeholder="Enter name" value="{{user.name}}">
    </div>
    <div class="form-group">
      <label for="image">Image</label>
      <input type="file" class="form-control-file" id="image" name="image">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

  {{else}}
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
    <br>
    <div class="col-md-12">
      <p>{{user.name}}</p>
      <p>{{user.email}}</p>
    </div>
    <button type="button" class="btn btn-link">
      <a href="/users/{{user.id}}/edit">Edit</a>
    </button>
  </div>
  {{/if}}
  <hr>
</div>

<hr>