<h1>餐廳後台</h1>

<a href='/admin/restaurants'>
  <button type="button" class="btn btn-primary">All Restaurant</button>
</a>
<a href='/admin/users'>
  <button type="button" class="btn btn-primary">All Users</button>
</a>

<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.email}}</td>
      <td>
        {{#if this.isAdmin}}
        admin
        {{else}}
        user
        {{/if}}
      </td>
      <td>
        {{#if this.isAdmin}}
        <form action="/admin/users/{{this.id}}?_method=PUT" method="POST">
          <a href="#" onclick="this.parentNode.submit()">set as user</a>
        </form>
        {{else}}
        <form action="/admin/users/{{this.id}}?_method=PUT" method="POST">
          <a href="#" onclick="this.parentNode.submit()">set as admin</a>
        </form>
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>